schema {
	query: Query
	mutation: Mutation
}

type Query {
	findAllPessoas: [Pessoa]
	findPessoaById(id: Int!): Pessoa
}

type Mutation {
	savePessoa(novo: PessoaInput): Pessoa
}

type Pessoa {
	id: ID!
	nome: String!
	cpf: String!
	email: String!
	dataNascimento: Date
}

input PessoaInput{
	nome: String!
	cpf: String!
	email: String!
}

scalar Date